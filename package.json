{
  "name": "tendertalks",
  "version": "1.0.0",
  "description": "A modern podcast streaming platform with subscription management, merchandise store, and admin dashboard",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Afnan",
    "email": "support@tendertalks.live",
    "url": "https://github.com/Afnanksalal"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Afnanksalal/tendertalks.git"
  },
  "bugs": {
    "url": "https://github.com/Afnanksalal/tendertalks/issues"
  },
  "homepage": "https://tendertalks.live",
  "keywords": [
    "podcast",
    "streaming",
    "react",
    "typescript",
    "tailwindcss",
    "vercel",
    "supabase",
    "neon",
    "razorpay"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"api/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" \"api/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed.ts",
    "clean": "rm -rf dist node_modules/.vite",
    "prepare": "echo 'Ready to develop!'"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.4",
    "@supabase/supabase-js": "^2.45.0",
    "@uiw/react-md-editor": "^4.0.8",
    "@vercel/analytics": "^1.5.0",
    "@vercel/og": "^0.8.5",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.33.0",
    "framer-motion": "^11.3.0",
    "lucide-react": "^0.400.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.26.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.24.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "globals": "^15.0.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.0",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.20.6",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.0.0"
}
